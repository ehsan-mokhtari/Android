<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/goodview"
    tools:context="com.ehsanmokhtari.brainchallenger.FindTheAnswer">

    <TextView
        android:id="@+id/fTACurrentTextView"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="13dp"
        android:background="#52ccc5c5"
        android:paddingBottom="3dp"
        android:paddingLeft="24dp"
        android:paddingTop="3dp"
        android:text="0 + 0"
        android:textColor="#5e4195"
        android:textSize="29sp"
        android:visibility="invisible"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fTASecondTextView" />

    <TextView
        android:id="@+id/fTASecondTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 + 0"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        android:visibility="invisible"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fTATimerTextView"
        android:layout_marginTop="-15dp" />

    <TextView
        android:id="@+id/fTAScoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="#c378f4"
        android:padding="4dp"
        android:text="0/0"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fTATimerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#9ae50e"
        android:padding="4dp"
        android:text="60s"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fTASituationTextView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:paddingRight="30dp"
        android:textColor="#e55c26"
        android:textSize="26sp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fTACurrentColorTextView" />

    <EditText
        android:id="@+id/fTAEnteredrEditText"
        android:layout_width="85dp"
        android:layout_height="44dp"
        android:layout_marginTop="13dp"
        android:background="#448d779a"
        android:ems="10"
        android:inputType="number"
        android:maxLength="3"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@+id/fTASecondTextView"
        app:layout_constraintRight_toRightOf="@+id/fTASecondTextView"
        app:layout_constraintTop_toBottomOf="@+id/fTASecondTextView" />

    <ImageButton
        android:id="@+id/fTAStartImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:onClick="fTAStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498"
        app:srcCompat="@android:drawable/ic_media_play" />

    <TextView
        android:id="@+id/fTACurrentColorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="0 + 0"
        android:textSize="28sp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@+id/fTAEnteredrEditText"
        app:layout_constraintRight_toRightOf="@+id/fTAEnteredrEditText"
        app:layout_constraintTop_toBottomOf="@+id/fTACurrentTextView" />

    <Button
        android:id="@+id/fTAGoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#6de89a"
        android:onClick="fTAGo"
        android:paddingBottom="8dp"
        android:text="بزن"
        android:textColor="#514a4a"
        android:textSize="44sp"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fTASecondTextView" />

</android.support.constraint.ConstraintLayout>
